{
  "compilerOptions": {
    "target": "ES2019",
    "lib": ["ES2022"],
    "strict": true,
    "declaration": true,
    "sourceMap": true,
    "outDir": "dist",
    "baseUrl": ".",
    "moduleResolution": "node",
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitAny": true,
    "paths": {
      "@/*": ["./src/*"],
      "tests/*": ["./tests/*"]
    }
  },
  "include": ["**/*.d.ts", "**/*.ts"]
}
